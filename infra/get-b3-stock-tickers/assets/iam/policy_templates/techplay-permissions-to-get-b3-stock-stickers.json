{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "CreateCloudWatchLogGroup",
            "Effect": "Allow",
            "Action": "logs:CreateLogGroup",
            "Resource": "arn:aws:logs:${region_name}:${account_id}:*"
        },
        {
            "Sid": "PutCloudWatchLogs",
            "Effect": "Allow",
            "Action": [
                "logs:CreateLogStream",
                "logs:PutLogEvents"
            ],
            "Resource": [
                "arn:aws:logs:${region_name}:${account_id}:log-group:/aws/lambda/*"
            ]
        },
        {
            "Sid": "PublishToSNSTopic",
            "Effect": "Allow",
            "Action": "sns:Publish",
            "Resource": "arn:aws:sns:${region_name}:${account_id}:${topic_name}"
        },
        {
            "Sid": "PutObjectToS3Bucket",
            "Effect": "Allow",
            "Action": "s3:PutObject",
            "Resource": "arn:aws:s3:::${bucket_name}/${table_prefix}/*"
        }
    ]
}
{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "DynamoDBStreamRead",
      "Effect": "Allow",
      "Action": [
        "dynamodb:DescribeStream",
        "dynamodb:GetRecords",
        "dynamodb:GetShardIterator",
        "dynamodb:ListStreams"
      ],
      "Resource": [
        "arn:aws:dynamodb:${region_name}:${account_id}:table/${dynamodb_investment_portfolio_table_name}/stream/*"
      ]
    },
    {
      "Sid": "WriteObjectsToCDCBucket",
      "Effect": "Allow",
      "Action": [
        "s3:PutObject",
        "s3:AbortMultipartUpload"
      ],
      "Resource": [
        "arn:aws:s3:::${s3_analytics_cdc_bucket_name}/dynamodb/${dynamodb_investment_portfolio_table_name}/*"
      ]
    },
    {
      "Sid": "ListCDCBucketPrefix",
      "Effect": "Allow",
      "Action": [
        "s3:ListBucket"
      ],
      "Resource": "arn:aws:s3:::${s3_analytics_cdc_bucket_name}",
      "Condition": {
        "StringLike": {
          "s3:prefix": [
            "dynamodb/${dynamodb_investment_portfolio_table_name}/*"
          ]
        }
      }
    }
  ]
}
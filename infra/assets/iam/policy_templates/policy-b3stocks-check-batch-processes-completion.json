{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "DynamoDBStreamRead",
            "Effect": "Allow",
            "Action": [
                "dynamodb:DescribeStream",
                "dynamodb:GetRecords",
                "dynamodb:GetShardIterator",
                "dynamodb:ListStreams"
            ],
            "Resource": [
                "arn:aws:dynamodb:${region_name}:${account_id}:table/${dynamodb_batch_process_control_table_name}/stream/*"
            ]
        }
    ]
}
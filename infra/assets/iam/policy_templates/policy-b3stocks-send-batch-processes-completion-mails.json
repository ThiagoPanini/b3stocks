{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "SNSAccess",
            "Effect": "Allow",
            "Action": [
                "sns:Subscribe",
                "sns:Unsubscribe",
                "sns:Receive"
            ],
            "Resource": [
                "arn:aws:sns:${region_name}:${account_id}:${sns_batch_processes_completion_topic_name}"
            ]
        },
        {
            "Sid": "GetEmailTemplateFromS3",
            "Effect": "Allow",
            "Action": [
                "s3:ListBucket",
                "s3:GetObject"
            ],
            "Resource": [
                "arn:aws:s3:::${s3_artifacts_bucket_name}",
                "arn:aws:s3:::${s3_artifacts_bucket_name}/${s3_email_templates_folder_prefix}/*"
            ]
        },
        {
            "Sid": "SESAccess",
            "Effect": "Allow",
            "Action": [
                "ses:SendEmail",
                "ses:SendRawEmail",
                "ses:SendBulkTemplatedEmail",
                "ses:SendTemplatedEmail"
            ],
            "Resource": [
                "arn:aws:ses:${region_name}:${account_id}:identity/*",
                "arn:aws:ses:${region_name}:${account_id}:configuration-set/*"
            ]
        }
    ]
}
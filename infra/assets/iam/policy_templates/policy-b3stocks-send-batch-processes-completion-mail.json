{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "SESAccess",
            "Effect": "Allow",
            "Action": [
                "ses:SendEmail",
                "ses:SendRawEmail",
                "ses:SendBulkTemplatedEmail",
                "ses:SendTemplatedEmail"
            ],
            "Resource": [
                "arn:aws:ses:${data.aws_region.current.name}:${local.account_id}:identity/*",
                "arn:aws:ses:${data.aws_region.current.name}:${local.account_id}:configuration-set/*"
            ]
        }
    ]
}